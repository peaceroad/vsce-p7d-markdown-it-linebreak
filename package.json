{
  "name": "p7d-markdown-it-linebreak",
  "displayName": "p7d-markdown-it-linebreak-and-strong-ja",
  "description": "Adjust handling of line breaks and em/strong asterisk mark in japanese markdown preview html.",
  "license": "MIT",
  "version": "0.3.0",
  "publisher": "peaceroad",
  "repository": {
    "url": "https://github.com/peaceroad/vsce-p7d-markdown-it-linebreak"
  },
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "type": "module",
  "scripts": {
    "build": "node build.js"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "markdown.markdownItPlugins": true,
    "configuration": {
      "title": "p7d-markdown-it-Linebreak-and-strong-ja",
      "properties": {
        "p7dMarkdownItLinebreak.cjkBreaks.disable": {
          "type": "boolean",
          "default": false,
          "description": "Disable markdown-it-cjk-breaks-mod entirely."
        },
        "p7dMarkdownItLinebreak.cjkBreaks.disableEither": {
          "type": "boolean",
          "default": false,
          "description": "Disable either-side suppression (use original markdown-it-cjk-breaks behavior)."
        },
        "p7dMarkdownItLinebreak.cjkBreaks.disableNormalizeSoftBreaks": {
          "type": "boolean",
          "default": false,
          "description": "Disable softbreak normalization for other plugins."
        },
        "p7dMarkdownItLinebreak.cjkBreaks.spaceAfterPunctuation": {
          "type": "string",
          "enum": [
            "half",
            "full",
            "none"
          ],
          "enumDescriptions": [
            "Insert a half-width (ASCII) space.",
            "Insert a full-width (ideographic) space.",
            "Disable punctuation spacing."
          ],
          "default": "half",
          "description": "Insert space when suppressing line breaks after punctuation; use 'none' to disable."
        },
        "p7dMarkdownItLinebreak.cjkBreaks.spaceAfterPunctuationTargetsAdd": {
          "type": "string",
          "default": "",
          "description": "Additional punctuation triggers to append (comma-separated)."
        },
        "p7dMarkdownItLinebreak.cjkBreaks.spaceAfterPunctuationTargetsRemove": {
          "type": "string",
          "default": "",
          "description": "Punctuation triggers to remove from the resolved list (comma-separated)."
        },
        "p7dMarkdownItLinebreak.strongJa.disable": {
          "type": "boolean",
          "default": false,
          "description": "Disable markdown-it-strong-ja entirely."
        },
        "p7dMarkdownItLinebreak.strongJa.mode": {
          "type": "string",
          "enum": [
            "japanese-boundary-guard",
            "japanese-boundary",
            "aggressive",
            "compatible"
          ],
          "enumDescriptions": [
            "Japanese boundary with mixed-text guard (default; japanese).",
            "Japanese boundary without mixed-text guard.",
            "Always pair leading ** greedily.",
            "Markdown-it compatible pairing."
          ],
          "default": "japanese-boundary-guard",
          "description": "Emphasis pairing mode: japanese-boundary-guard/japanese-boundary/aggressive/compatible."
        },
        "p7dMarkdownItLinebreak.strongJa.notUsingMarkdownItAttrsFeature": {
          "type": "boolean",
          "default": false,
          "description": "Disable markdown-it-attrs integration (set true if you do not use markdown-it-attrs)."
        }
      }
    }
  },
  "dependencies": {
    "@peaceroad/markdown-it-cjk-breaks-mod": "^0.1.8",
    "@peaceroad/markdown-it-strong-ja": "^0.8.0"
  },
  "devDependencies": {
    "esbuild": "^0.27.2"
  }
}
